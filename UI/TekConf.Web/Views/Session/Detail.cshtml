@using TekConf.RemoteData.Dtos.v1
@model TekConf.Web.ViewModels.SessionDetailViewModel


<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
	<div class="container">
		<h1 class="color-green pull-left">@Model.Conference.name</h1>
	</div>
	<!--/container-->
