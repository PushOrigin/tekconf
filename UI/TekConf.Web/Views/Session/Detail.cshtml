<!--=== Content Part ===-->
<div class="container portfolio-item">
	<div class="row-fluid margin-bottom-20">
		<!-- Carousel -->
		<div class="span7">
			<div id="myCarousel" class="carousel slide">
				<div class="carousel-inner">
					<div class="item active">
						<img src="@Model.Conference.imageUrl" alt="" style="width:670px;">
					</div>
				</div>
			</div>
		</div>
		<!--/span7-->
		<!-- //End Tabs and Carousel -->

		<div class="span5">
			<h3>@Model.Session.title</h3>
			<ul class="unstyled">
				<li style="font-size: x-large;"><i class="icon-calendar color-green"></i> @Model.Session.startDescription</li>
				<li style="font-size: x-large;"><i class="icon-user color-green"></i> @Model.Session.room</li>
			</ul>
			<p>@Model.Session.description</p>
			<ul class="unstyled">
				@if (!string.IsNullOrWhiteSpace(Model.Session.difficulty))
				{
					<li><i class="icon-tags color-green"></i> @Model.Session.difficulty</li>
				}
				@if (!string.IsNullOrWhiteSpace(Model.Session.twitterHashTag))
				{
					<li><i class="icon-tags color-green"></i> @Model.Session.twitterHashTag</li>
				}
			</ul>
			<p>
				@if (Html.IsAdmin())
				{

					@Html.RouteLink("Edit Session", "AdminEditSession", new { conferenceSlug = Model.Conference.slug, sessionSlug = Model.Session.slug }, new { @class = "btn btn-info" })
					<text>&nbsp;</text>
					@Html.RouteLink("Add Speaker", "AdminAddSpeaker", new { conferenceSlug = Model.Conference.slug, sessionSlug = Model.Session.slug }, new { @class = "btn" })
				}

				@if (Request.IsAuthenticated)
				{
					<a class="btn-u btn-u-large" href="#">Add to Schedule</a>
				}
			</p>
		</div>
	</div>
	<!--/row-fluid-->


	<div class="headline">
		<h3>Speakers</h3>
	</div>
	<ul class="thumbnails team">
		@foreach (SpeakersDto speaker in Model.Session.speakers)
		{
			<li class="span3">
				<div class="thumbnail-style">
					@*<img src="@speaker.profileImageUrl" alt="" />*@
